<%- include("./partials/head.ejs",{pageTitle:"Home"}) %>
</head>

<body>
  <%- include("./partials/nav.ejs",{pageTitle:"Home"})%>
  <div class="min-h-screen bg-gray-100 py-8 px-4">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-black font-bold text-2xl md:text-3xl mb-8 text-center">
        Here are our registered homes!
      </h2>
      <% if (registeredHomes && registeredHomes.length > 0) { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          <% for(const home of registeredHomes) { %>
            <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 flex flex-col">
              <div class="relative h-48 w-full overflow-hidden">
                <img src="<%= home.image %>" alt="<%= home.houseName %>" 
                  class="w-full h-full object-cover hover:scale-110 transition-transform duration-300"/>
              </div>
              <div class="p-4 flex-grow flex flex-col">
                <h3 class="text-lg font-bold text-gray-900 mb-2 line-clamp-2"><%= home.houseName %></h3>
                <p class="text-gray-600 text-sm mb-2 flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <%= home.location %>
                </p>
                <div class="mt-auto pt-2 border-t border-gray-200">
                  <p class="text-red-500 font-bold text-xl">
                    $<%= home.price %> <span class="text-gray-600 text-sm font-normal">/ night</span>
                  </p>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      <% } else { %>
        <div class="bg-white p-8 rounded-lg shadow-lg max-w-md mx-auto text-center">
          <p class="text-gray-600 text-lg">No homes registered yet.</p>
          <a href="/host/add-home" class="inline-block mt-4 bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-6 rounded-lg transition-colors duration-200">
            Add Your First Home
          </a>
        </div>
      <% } %>
    </div>
  </div>
</body>

</html>